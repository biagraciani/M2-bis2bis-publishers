<?xml version="1.0"?>
<!--
/**
 * acl.xml
 *
 * Define as permissões de acesso do módulo Bis2bis_Publishers no painel administrativo do Magento.
 *
 * @package Bis2bis_Publishers
 * @author Beatriz Graciani Sborz
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">

    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Bis2bis_Publishers::catalog" title="Publishers" sortOrder="10">
                    <resource id="Bis2bis_Publishers::create" title="Create Publisher" sortOrder="10"/>
                    <resource id="Bis2bis_Publishers::edit" title="Edit Publisher" sortOrder="20"/>
                    <resource id="Bis2bis_Publishers::delete" title="Delete Publisher" sortOrder="30"/>
                    <resource id="Bis2bis_Publishers::list" title="List Publishers" sortOrder="40"/>
                </resource>
            </resource>
        </resources>
    </acl>

</config>
